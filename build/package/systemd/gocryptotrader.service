[Unit]
Description=gocryptotrader
After=network.target
Documentation=https://github.com/thrasher-corp/gocryptotrader

[Service]
User=gocryptotrader
Group=gocryptotrader
StandardOutput=journal
StandardError=journal
Nice=-5
Restart=on-failure
RestartSec=2
ExecStart=/usr/bin/gocryptotrader -databasemanager=false -enablecommsrelayer=false -portfoliomanager=false
ExecReload=/bin/kill -HUP $MAINPID
LimitNOFILE=1000000
LimitCORE=infinity
Environment="GOGC=100"
Environment="GOTRACEBACK=crash"
AmbientCapabilities=CAP_NET_BIND_SERVICE
UMask=0002
ProtectSystem=full
ProtectHome=false
NoNewPrivileges=true

[Install]
WantedBy=multi-user.target
